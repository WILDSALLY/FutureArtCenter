<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.futureArtCenter.client.notice.dao.NoticeDAO">

	<!-- 공지사항 목록 조회 -->
	<select id="list" resultType="com.futureArtCenter.client.notice.vo.NoticeVO">
<![CDATA[
	SELECT notice_no,
			notice_title,
			notice_content,
			notice_poster,
			notice_date
		FROM notice_tb
		WHERE notice_no > 0
		ORDER BY notice_no DESC,
				notice_date DESC
		]]>
	</select>
	
	<!-- 공지사항 상세 조회 -->
	<select id="read" resultType="com.futureArtCenter.client.notice.vo.NoticeVO">
	SELECT notice_no,
			notice_title,
			notice_content,
			notice_poster,
			notice_date
		FROM notice_tb
		WHERE notice_no = #{notice_no} 
	</select>
	
	<!-- 게시글 전체 건수를 조회한다. 
	<select id="count" resultType="int">
	<![CDATA[
	SELECT count(notice_no)
	FROM notice_tb
	WHERE notice_no > 0
	]]>
	</select>
	
	-->
	
	<!-- 페이징 요청 정보를 매개 변수로 받아 페이징 처리를 한 게시글 목록을 조회한다. 
	<select id="list" resultType="com.futureArtCenter.client.notice.vo.NoticeVO">
	<![CDATA[
	SELECT notice_no,
	notice_title,
			notice_content,
			notice_poster,
			notice_date
			FROM (select notice_no,
			notice_title,
			notice_content,
			notice_poster,
			notice_date,
			rownum as rnum
			from notice_tb)
			where rnum between #{sizePerPage}*#{page}-9 and #{sizePerPage}*#{page}
			ORDER BY notice_no DESC,
			notice_date DESC
	]]>
	</select>
	
	-->

</mapper>